<EditForm Model="Model" OnValidSubmit="AddItem">
    <InputText @bind-Value="Model.NewItemName" />
    <button type="submit">작성</button>
</EditForm>

@code {
    [CascadingParameter]
    public ITodoItemService TodoItemService { get; set; }

    private FormModel Model = new();

    public async void AddItem()
    {
        if (string.IsNullOrEmpty(Model.NewItemName))
        {
            return;
        }

        await TodoItemService.AddItemAsync(Model.NewItemName);
        Model.NewItemName = "";
        StateHasChanged();
    }

    public class FormModel
    {
        public string NewItemName { get; set; } = "";
    }
}
